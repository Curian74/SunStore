@using SunStore.ViewModel.RequestModels
@model RegisterRequestViewModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div style="width: 100%; display:flex; justify-content:center">
    <div class="containerr">
        <div class="head">Đăng ký</div>
        <form method="post" asp-action="Register" asp-controller="Users" class="form">
            @if (ViewBag.Error != null)
            {
                <p style="color:red; margin: 10px;">@ViewBag.Error</p>
            }
            <input asp-for="@Model.Email" class="inp mb-3" placeholder="Email">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>

            <input asp-for="@Model.FullName" class="inp mb-3" placeholder="Họ tên">
            <span asp-validation-for="@Model.FullName" class="text-danger"></span>

            <input asp-for="@Model.Username" class="inp mb-3" placeholder="Nickname">
            <span asp-validation-for="@Model.Username" class="text-danger"></span>

            <input asp-for="@Model.PhoneNumber" class="inp mb-3" placeholder="Số điện thoại">
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>

            <input asp-for="@Model.BirthDate" type="date" class="inp mb-3" placeholder="Ngày sinh">
            <span asp-validation-for="@Model.BirthDate" class="text-danger"></span>

            <input asp-for="@Model.Password" class="inp mb-3" type="password" placeholder="Mật khẩu">
            <span asp-validation-for="@Model.Password" class="text-danger"></span>

            <input asp-for="@Model.ConfirmPassword" class="inp mb-3" type="password" placeholder="Xác nhận mật khẩu">
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

            <span class="forgot-password fs-6">
                Đã có tài khoản?
                <a asp-action="Login">Đăng nhập ngay</a>
            </span>
            <input class="login-button" type="submit" value="Đăng Ký">
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}