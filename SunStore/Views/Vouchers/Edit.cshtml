@model EditVoucherViewModel

@{
    ViewData["Title"] = "Edit";
}
<div class="container" style="min-height:800px;">
    <h1 class="text-center">Edit</h1>

    <h4>Voucher</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VoucherId" />
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Vpercent" class="control-label">Amount of discount</label>
                    <input asp-for="Vpercent" class="form-control" />
                    <span asp-validation-for="Vpercent" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label">Dành cho người dùng:</label>
                    <br />
                    <select class="select2" id="userList"
                            multiple="multiple"
                            data-placeholder="Chọn người dùng..."
                            asp-for="UserIds"
                            asp-items="Model.Users">
                    </select>
                    <br />
                    <p class="font-italic mt-3 text-muted" style="font-size: 13px;">
                        Lưu ý: Voucher sẽ có hiệu lực cho toàn bộ người dùng trong hệ thống nếu không có người dùng nào được chọn.
                    </p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a class="btn btn-success ml-2" asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $('select.select2').each(function () {
            if ($(this).hasClass('select2-hidden-accessible')) {
                $(this).select2('destroy');
            }

            $(this).select2({
                allowClear: true,

                width: '50%'
            });
        });
    </script>
}
