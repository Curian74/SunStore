@using SunStore.ViewModel.RequestModels
@model ResetPasswordRequestViewModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<div style="width: 100%; display:flex; justify-content:center" class="">
    <div class="containerr">
        <div class="head">Reset Password</div>
        <form method="post" asp-action="ResetPassword" asp-controller="Users" class="form">
            <input asp-for="@Model.Email" class="inp mb-3" placeholder="Email">
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
            @if (ViewBag.Error != null)
            {
                <p style="color:red; margin: 10px;">@ViewBag.Error</p>
            }
            <input class="login-button" type="submit" value="Gửi yêu cầu">
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}